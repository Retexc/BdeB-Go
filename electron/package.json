{
  "name": "bdeb-go",
  "version": "1.1.0",
  "productName": "BdeB-Go",
  "main": "main.js",
  "scripts": {
    "build:vue": "npm --prefix ../admin-frontend run build",
    "dev": "concurrently \"npm --prefix ../admin-frontend run dev\" \"npm run start\"",
    "start": "cross-env NODE_ENV=development electron .",
    "dist": "npm run build:vue && cross-env NODE_ENV=production electron-builder"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0"
  },
  "build": {
    "appId": "com.bdeb.gtfs",
    "productName": "BdeB-Go Manager",
    "files": [
      "electron/main.js",
      "splash.html",
      "icon.ico",
      "electron/backend/**",
      "../admin-frontend/dist/**/*"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Retexc",
        "repo": "BdeB-GTFS"
      }
    ]
  }
}
